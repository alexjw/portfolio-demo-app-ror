<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Meals</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @meals.each do |meal| %>
        <tr>
          <td><%= meal.name %></td>
          <td><%= meal.description %></td>
          <td><%= meal.price %></td>
          <td><%= link_to 'Show', meal %>
          <%= link_to 'Edit', edit_meal_path(meal) %>
          <%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Meal', new_meal_path %>
</div>
